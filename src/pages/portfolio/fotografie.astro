---
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';
import Layout from '../../layouts/Layout.astro';
import { useStoryblokApi } from '@storyblok/astro';

const sbApi = useStoryblokApi();
const { data } = await sbApi.get('cdn/stories/portfolio/fotografie', {
  version: 'draft',
});

const story = data.story;
const bgBlok = story.content.body.find((item) => item.component === 'portfolioHeader');
const seoImg = bgBlok.backgroundImage.filename;
---

<Layout
  title="DSGN. Fotografie Portfolio"
  image={seoImg}
  description="Fotografie Portfolio von Sarah Weihrauch - Freiberufliche Mediendesignerin">
  <StoryblokComponent blok={story.content} />
</Layout>
