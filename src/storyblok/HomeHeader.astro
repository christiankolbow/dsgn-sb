---
import { Picture } from '@astrojs/image/components';
import { storyblokEditable, renderRichText } from '@storyblok/astro';
import mockup from '../assets/images/med-tech-mockup.png';

const { blok } = Astro.props;
const renderedDescription = renderRichText(blok.description);
---

<Fragment {...storyblokEditable(blok)}>
  <section class="pt-64 pb-52">
    <div class="container flex flex-col-reverse md:items-center md:flex-row gap-12">
      <div class="w-7/12">
        <Picture
          src={mockup.src}
          widths={[400, 800, 1200, 1400, 1600]}
          quality={90}
          sizes="50vw"
          alt=""
          aspectRatio={3 / 2}
          position="center"
          fit="contain"
          background="rgba(0,0,0,0)"
        />
        <div class="flex justify-center gap-3 [&>*]:bg-primary [&>*]:rounded-full [&>*]:w-3 [&>*]:h-3">
          <div></div>
          <div></div>
          <div></div>
          <div></div>
        </div>
      </div>
      <div class="w-5/12">
        <h1 class="text-5xl text-primary mb-2 font-clanMedium">{blok.title}</h1>
        <h2 class="text-2xl text-primary mb-10">{blok.subtitle}</h2>
        <a class="text-primary mb-10 max-w-sm" set:html={renderedDescription} />
        <a href={blok.actionButtonUrl.url} class="btn-primary">{blok.actionButtonText}</a>
      </div>
    </div>
  </section>
</Fragment>
