---
import { Picture } from '@astrojs/image/components';
import { storyblokEditable, renderRichText } from '@storyblok/astro';
const { blok } = Astro.props;
const renderedDescription = renderRichText(blok.description);
---

<Fragment {...storyblokEditable(blok)}>
  <section class="py-32" id="Ã¼ber-mich">
    <div class="container">
      <h2 class="text-5xl text-primary mb-2 font-clanMedium text-center">{blok.title}</h2>
      {blok.subtitle && <p class="text-xl text-primary mb-16 text-center">{blok.subtitle}</p>}
      <div class="md:flex justify-end md:max-w-6xl max-w-sm mx-auto md:mx-0 lg:mb-12 xl:max-w-5xl">
        {
          blok.welcomeImage?.filename && (
            <Picture
              src={blok.welcomeImage.filename}
              widths={[680, 800, 1200, 1400, 1800]}
              quality={85}
              class=" md:-mb-28 w-full h-full md:w-auto md:h-auto object-cover object-center"
              sizes="680px"
              alt="Hi! Ich bin Sarah. Freiberufliche Mediendesignerin."
              title="Hi! Ich bin Sarah. Freiberufliche Mediendesignerin."
              aspectRatio={3 / 2}
              position="center"
              fit="contain"
              background="rgba(0,0,0,0)"
            />
          )
        }
      </div>

      <div class="flex flex-col md:flex-row gap-y-16 gap-x-40 md:gap-x-14 lg:gap-x-40 items-center">
        <Picture
          src={blok.profileImage?.filename}
          widths={[680, 800, 1200, 1400, 1800]}
          quality={85}
          sizes="50vw"
          class="rounded-full aspect-square max-h-[480px] w-64 md:w-[480px] max-w-full"
          alt="Hi! Ich bin Sarah. Freiberufliche Mediendesignerin."
          title="Hi! Ich bin Sarah. Freiberufliche Mediendesignerin."
          aspectRatio={1 / 1}
          position="center"
          fit="cover"
          background="rgba(0,0,0,0)"
        />
        <div class="flex flex-col">
          <div class="text-primary mb-4 [&>p]:mb-4 [&>p>b]:font-clanMedium max-w-md mx-auto" set:html={renderedDescription} />
        </div>
      </div>
    </div>
  </section>
</Fragment>
